<%= heading("カード一覧") %>

<div class="page-header">
	<h2><small>カード総数: </small> <%= @cards.size.to_s %></h2>
</div>

<table class="table table-striped">
<%= showCardHeader() %>
<% @cards.each do |card| %>
	<%= showCard(card)  %>
<% end %>
</table>

<br />

<%= link_to 'New Card', new_card_path, :class=>'btn btn-primary' %>
